<?php
/**
 * Single Template: Case（導入事例詳細）
 */
get_header();
?>

<main class="single single-case">
  <div class="single-container">

    <?php
    if ( have_posts() ) :
      while ( have_posts() ) :
        the_post();
    ?>

    <article <?php post_class(); ?>>

      <header class="single-header">
        <div class="single-meta">
          <span class="single-label">導入事例</span>
          <time class="single-date" datetime="<?php echo get_the_date('Y-m-d'); ?>">
            <?php echo get_the_date('Y年m月d日'); ?>
          </time>
        </div>
        <h1 class="single-title"><?php the_title(); ?></h1>
      </header>

      <?php if ( has_post_thumbnail() ) : ?>
        <div class="single-thumbnail">
          <?php the_post_thumbnail('large'); ?>
        </div>
      <?php endif; ?>

      <div class="single-content">
        <?php the_content(); ?>
      </div>

      <!-- 導入事例CTA -->
      <div class="single-cta">
        <div class="single-cta-inner">
          <h3 class="single-cta-title">代表電話コネクトを試してみませんか？</h3>
          <p class="single-cta-text">資料請求・お問い合わせはこちらから。</p>
          <a href="/resource/general/" class="btn btn--primary">
            資料請求はこちら
          </a>
        </div>
      </div>

    </article>

    <nav class="single-nav">
      <div class="single-nav-prev">
        <?php previous_post_link('%link', '&laquo; 前の事例'); ?>
      </div>
      <div class="single-nav-back">
        <a href="<?php echo get_post_type_archive_link('case'); ?>">導入事例一覧へ戻る</a>
      </div>
      <div class="single-nav-next">
        <?php next_post_link('%link', '次の事例 &raquo;'); ?>
      </div>
    </nav>

    <?php
      endwhile;
    endif;
    ?>

  </div>
</main>

<?php get_footer(); ?>
